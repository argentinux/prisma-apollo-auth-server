{
  "name": "minimal-ts-node",
  "version": "1.0.0",
  "description": "Minimal node + typescript starter",
  "main": "index.js",
  "scripts": {
    "watch": "tsc --skipLibCheck --watch",
    "dev": "nodemon --quiet --watch dist --exec 'clear;node dist/index.js'",
    "build": "tsc",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "lint": "eslint '*/**/*.ts' --quiet .",
    "lint:fix": "yarn lint --fix",
    "format": "prettier --write --loglevel silent './**/*.{json,js}'"
  },
  "keywords": [
    "node",
    "typescript"
  ],
  "author": "argentinux",
  "license": "MIT",
  "devDependencies": {
    "@prisma/cli": "^2.6.2",
    "@types/node": "^14.6.0",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "typescript": "3.9"
  },
  "dependencies": {
    "@prisma/client": "^2.6.2",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "loglevel": "^1.6.8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*/**/*.ts": "yarn lint:fix",
    "*/**/*.{json,js}": "yarn format"
  }
}
